- @messages.each do |message|
  .message
    %p.message__head
      %span.message__head_name
        = message.user[:name] if message.user
      %span.message__head_date
        = message.created_at.strftime('%Y/%m/%d %H:%M') if message.created_at
    %p.message__body
      = message.body if message.body
      = image_tag message.image_url(:thumb) if message.image_url
