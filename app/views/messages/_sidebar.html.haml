.sidebar
  .userInfo
    %p.userInfo__name
      = current_user.name
    %span.userInfo__icon.userInfo__icon_setting
      = link_to edit_user_path(current_user.id) do
        %i.fa.fa-cog
    %span.userInfo__icon.userInfo__icon_makegroup
      = link_to new_group_path do
        %i.fa.fa-pencil-square-o

  - current_user.groups.each do |belong_group|
    .groupList
      = link_to group_messages_path(belong_group.id), class: "groupList__link" do
        %p.groupList__link_name
          = belong_group.name
        %p.groupList__link_message
          = get_newmessage belong_group
